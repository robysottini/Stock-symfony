{% extends 'base.html.twig' %}

{% block body %}
    <h1>Torniquetes</h1>

    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>Marca</th>
                <th>Cantidad</th>
            </tr>
        </thead>
        <tbody>
        {% for torniquete in torniquetes %}
            <tr>
                <td>{{ torniquete.marca }}</td>
                <td>{{ torniquete.cantidad }}</td>
                <td>
                    <a href="{{ path('torniquete_edit', { 'id': torniquete.id }) }}" class="btn btn-primary">Editar</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    
    <a href="{{ path('torniquete_new') }}" class="btn btn-primary">Nuevo torniquete</a>
{% endblock %}
