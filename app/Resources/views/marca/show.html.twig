{% extends 'base.html.twig' %}

{% block body %}
    <h1>Marca</h1>

    <table class="bordered striped highlight responsive-table">
        <tbody>
            <tr>
                <th>Nombre</th>
                <td>{{ marca.nombre }}</td>
            </tr>
        </tbody>
    </table>
    <br/>

    <a href="{{ path('marca_index') }}" class="btn waves-effect waves-light">
        <i class="material-icons left">arrow_back</i>Volver a la lista</a>
    <br/>
    <br/>
    <br/>
    <br/>

    <a href="{{ path('marca_edit', { 'id': marca.id }) }}" class="btn waves-effect waves-light">Editar</a>
    <br/>
    <br/>
    
    {{ form_start(delete_form) }}
        <button class="btn waves-effect waves-light" type="submit" name="action">Eliminar
            <i class="material-icons left">delete</i>
        </button>    
    {{ form_end(delete_form) }}
{% endblock %}
