{% extends 'base.html.twig' %}

{% block body %}
    <h1>Aguja</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ aguja.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ aguja.nombre }}</td>
            </tr>
            <tr>
                <th>Capacidad</th>
                <td>{{ aguja.capacidad }}</td>
            </tr>
            <tr>
                <th>Vencimiento</th>
                <td>{% if aguja.vencimiento %}{{ aguja.vencimiento|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Cantidad</th>
                <td>{{ aguja.cantidad }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('aguja_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('aguja_edit', { 'id': aguja.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
