{% extends 'base.html.twig' %}

{% block body %}
    <h1>Aguja</h1>

    <table class="table table-bordered table-striped table-hover">
        <tbody>
            <tr>
                <th>Nombre</th>
                <td>{{ aguja.nombre }}</td>
            </tr>
            <tr>
                <th>Capacidad</th>
                <td>{{ aguja.capacidad }}</td>
            </tr>
            <tr>
                <th>Vencimiento</th>
                <td>{% if aguja.vencimiento %}{{ aguja.vencimiento|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Cantidad</th>
                <td>{{ aguja.cantidad }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('aguja_index') }}" class="btn btn-primary">Volver a la lista</a>
    <a href="{{ path('aguja_edit', { 'id': aguja.id }) }}" class="btn btn-primary">Editar</a>
    {{ form_start(delete_form) }}
        <input type="submit" value="Eliminar" class="btn btn-primary">
    {{ form_end(delete_form) }}
{% endblock %}
