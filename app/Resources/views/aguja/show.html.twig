{% extends 'base.html.twig' %}

{% block body %}
    <h1>Aguja</h1>

    <table class="bordered striped highlight responsive-table">
        <tbody>
            <tr>
                <th>Nombre</th>
                <td>{{ aguja.nombre }}</td>
            </tr>
            <tr>
                <th>Capacidad</th>
                <td>{{ aguja.capacidad }}</td>
            </tr>
            <tr>
                <th>Vencimiento</th>
                <td>{% if aguja.vencimiento %}{{ aguja.vencimiento|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Cantidad</th>
                <td>{{ aguja.cantidad }}</td>
            </tr>
        </tbody>
    </table>
    <br/>

    <a href="{{ path('aguja_index') }}" class="btn waves-effect waves-light">
        <i class="material-icons left">arrow_back</i>Volver a la lista</a>
    <br/>
    <br/>
    <br/>
    <br/>

    <a href="{{ path('aguja_edit', { 'id': aguja.id }) }}" class="btn waves-effect waves-light">Editar</a>
    <br/>
    <br/>
    
    {{ form_start(delete_form) }}
        <button class="btn waves-effect waves-light" type="submit" name="action">Eliminar
            <i class="material-icons left">delete</i>
        </button>    
    {{ form_end(delete_form) }}
{% endblock %}
