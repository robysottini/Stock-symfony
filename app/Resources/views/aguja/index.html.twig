{% extends 'base.html.twig' %}

{% block body %}
    <h1>Agujas</h1>

    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Capacidad</th>
                <th>Vencimiento</th>
                <th>Cantidad</th>
            </tr>
        </thead>
        <tbody>
        {% for aguja in agujas %}
            <tr>
                <td>{{ aguja.nombre }}</td>
                <td>{{ aguja.capacidad }}</td>
                <td>{% if aguja.vencimiento %}{{ aguja.vencimiento|date('Y-m-d') }}{% endif %}</td>
                <td>{{ aguja.cantidad }}</td>
                <td>
                    <a href="{{ path('aguja_edit', { 'id': aguja.id }) }}" class="btn btn-primary">Editar</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('aguja_new') }}" class="btn btn-primary">Nuevo aguja</a>
{% endblock %}
