{% extends 'base.html.twig' %}

{% block body %}
    <h1>Jeringa</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ jeringa.id }}</td>
            </tr>
            <tr>
                <th>Marca</th>
                <td>{{ jeringa.marca }}</td>
            </tr>
            <tr>
                <th>Capacidad</th>
                <td>{{ jeringa.capacidad }}</td>
            </tr>
            <tr>
                <th>Vencimiento</th>
                <td>{% if jeringa.vencimiento %}{{ jeringa.vencimiento|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Cantidad</th>
                <td>{{ jeringa.cantidad }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('jeringa_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('jeringa_edit', { 'id': jeringa.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
