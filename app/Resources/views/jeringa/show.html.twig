{% extends 'base.html.twig' %}

{% block body %}
    <h1>Jeringa</h1>

    <table class="bordered striped highlight responsive-table">
        <tbody>
            <tr>
                <th>Marca</th>
                <td>{{ jeringa.marca }}</td>
            </tr>
            <tr>
                <th>Capacidad</th>
                <td>{{ jeringa.capacidad }}</td>
            </tr>
            <tr>
                <th>Vencimiento</th>
                <td>{% if jeringa.vencimiento %}{{ jeringa.vencimiento|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Cantidad</th>
                <td>{{ jeringa.cantidad }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('jeringa_index') }}" class="btn waves-effect waves-light">Volver a la lista</a></br></br>
    <a href="{{ path('jeringa_edit', { 'id': jeringa.id }) }}" class="btn waves-effect waves-light">Editar</a></br></br>
    {{ form_start(delete_form) }}
        <input type="submit" value="Eliminar" class="btn">
    {{ form_end(delete_form) }}
{% endblock %}
