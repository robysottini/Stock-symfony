{% extends 'base.html.twig' %}

{% block body %}
    <h1>Guantes</h1>

    <table class="bordered striped highlight responsive-table">
        <thead>
            <tr>
                <th>Marca</th>
                <th>Descripcion</th>
                <th>Vencimiento</th>
                <th>Libredetalco</th>
                <th>Lote</th>
                <th>Cantidad</th>
            </tr>
        </thead>
        <tbody>
        {% for guante in guantes %}
            <tr>
                <td>{{ guante.marca }}</td>
                <td>{{ guante.descripcion }}</td>
                <td>{% if guante.vencimiento %}{{ guante.vencimiento|date('Y-m-d') }}{% endif %}</td>
                <td>{% if guante.libreDeTalco %}Yes{% else %}No{% endif %}</td>
                <td>{{ guante.lote }}</td>
                <td>{{ guante.cantidad }}</td>
                <td>
                    <a href="{{ path('guante_edit', { 'id': guante.id }) }}" class="btn waves-effect waves-light">
                        <i class="material-icons left">edit</i>Editar</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br>
    <br>

    <div class="fixed-action-btn" style="bottom: 100px; right: 24px;">
        <a href="{{ path('guante_new') }}" class="btn-floating btn-large waves-effect waves-light">
            <i class="large material-icons">add_circle</i>
        </a>
    </div>
    
{% endblock %}
